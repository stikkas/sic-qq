<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="SicEntityManager"
		transaction-type="JTA">
		
		<jta-data-source>java:jboss/SicDS</jta-data-source>
                <!-- Корректный путь должен быть именно таким. Если меняются версии - править руками версию ramdoc-ear & core-model !-->
				<jar-file>qq-0.0.1-SNAPSHOT.ear/lib/core-model-0.1.3.jar</jar-file>
                <jar-file>qq-0.0.1-SNAPSHOT.ear/qq-ejb-0.0.1-SNAPSHOT.jar</jar-file>
                <exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.jdbc.batch_size" value="20" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
			<property name="hibernate.use_sql_comments" value="false" />
			<property name="hibernate.cache.use_query_cache" value="false" />
			<property name="hibernate.cache.use_second_level_cache"
				value="false" />
			<property name="hibernate.generate_statistics" value="false" />
			<property name="hibernate.current_session_contexkt_class"
				value="thread" />
		</properties>
	</persistence-unit>
</persistence>
